{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "routes/**/*",
    "index.ts",
    "middleware/*",
    "sql/*",
    "router/*",
    "service/*",
    "shared/*",
    "utils/*",
    "type/*",
    "../global.d.ts"
  ]
}
