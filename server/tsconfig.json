{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "views/*",
    "routes/**/*",
    "index.ts",
    "middleware/*",
    "mysql/*",
    "router/*",
    "service/*",
    "shared/*",
    "utils/*",
    "test/**/*"
  ]
}
