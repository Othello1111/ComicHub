{
  "extends": "tslint:recommended",
  "rules": {
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "ordered-imports": false,
    "no-console": {
      "severity": "off",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape",
      "avoid-template"
    ]
  }
}
