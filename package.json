{
  "name": "ComicHub",
  "version": "1.0.0",
  "description": "ComicHub",
  "main": "./dist/main/main.js",
  "private": true,
  "build": {
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "category": "Comic"
    },
    "directories": {
      "output": "release"
    },
    "appId": "com.nusr.ComicHub",
    "asar": false
  },
  "scripts": {
    "start": "npm run build-main-dev && electron ./dist/main/main.js",
    "start:main": "electron-webpack dev",
    "start:render": "APP_ROOT=src/renderer umi dev",
    "build-main-prod": "NODE_ENV=production webpack --config ./scripts/webpack.main.prod.config.js",
    "build-main-dev": "NODE_ENV=development webpack --config ./scripts/webpack.main.config.js",
    "build:renderer": "APP_ROOT=src/renderer umi build",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "debug:main": "electron --inspect=5858 -w ./dist/main/main.js",
    "pack": "npm run build:renderer && npm run build-main-prod && electron-builder --dir",
    "dist": "electron-builder",
    "prettier": "prettier --list-different \"./**/*.{ts,tsx,js,jsx,less}\""
  },
  "repository": "https://github.com/nusr/ComicHub",
  "keywords": [
    "Electron",
    "umi",
    "Comic",
    "typescript"
  ],
  "author": {
    "name": "Steve Xu",
    "email": "stevexugc@gmail.com"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.0.0",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "prettier": "1.16.4",
    "ts-loader": "^5.3.3",
    "tslint": "^5.10.0",
    "typescript": "^3.2.4",
    "umi": "^2.4.4",
    "umi-plugin-react": "^1.4.2",
    "webpack": "4.28.0",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": null
    }
  }
}
