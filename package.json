{
  "name": "comic-downloader",
  "version": "1.0.0",
  "description": "comic-downloader",
  "main": "./dist/main/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:8000 && npm run start:electron\"",
    "start:react": "APP_ROOT=src/renderer PORT=8848 umi dev",
    "start:electron": "electron-webpack dev",
    "start:server": "npm run --prefix ./server dev",
    "build:main-prod": "NODE_ENV=production webpack --config ./scripts/webpack.main.prod.js",
    "build:main-dev": "NODE_ENV=development webpack --config ./scripts/webpack.main.dev.js",
    "build:renderer": "APP_ROOT=src/renderer umi build",
    "watch": "tsc -w",
    "debug:main": "electron --inspect=5858 -w ./dist/main/main.js",
    "pack": "npm run build:renderer && npm run build:main-prod && electron-builder --dir",
    "dist": "electron-builder",
    "lint-staged": "lint-staged",
    "format": "npm run lint && npm run prettier",
    "update-readme": "node server/dist/utils/generateMarkdown.js",
    "style": "stylelint 'src/**/*.less' --syntax less",
    "prettier": "node ./scripts/prettier.js",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx src server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.38.5",
    "electron-debug": "^3.0.0",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "eslint": "^5.16.0",
    "eslint-config-alloy": "2.0.0-alpha.2",
    "eslint-config-prettier": "^4.3.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "1.17.1",
    "stylelint": "^10.0.1",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
    "stylelint-order": "^3.0.0",
    "typescript": "^3.4.5",
    "umi": "^2.4.4",
    "umi-plugin-react": "^1.4.2",
    "wait-on": "^3.2.0",
    "webpack": "4.31.0",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "build": {
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "category": "Comic"
    },
    "directories": {
      "output": "release"
    },
    "appId": "com.nusr.comic-downloader",
    "asar": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run update-readme && npm run lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{ts,tsx,jsx,js,json,md}": [
        "node ./scripts/lint-prettier.js",
        "git add"
      ],
      "**/*.{ts,tsx,jsx,js}": [
        "eslint --fix --ext .js,.jsx,.ts,.tsx",
        "git add"
      ],
      "**/*.less": "stylelint --syntax less"
    },
    "ignore": [
      "**/release/**/*",
      "**/dist/**/*",
      "**/build/**/*"
    ]
  },
  "repository": "https://github.com/nusr/comic-downloader",
  "keywords": [
    "Electron",
    "umi",
    "Comic",
    "Downloader",
    "typescript"
  ],
  "author": {
    "name": "Steve Xu",
    "email": "stevexugc@gmail.com"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "license": "MIT"
}
