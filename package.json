{
    "name": "ComicHub",
    "version": "1.0.0",
    "description": "ComicHub",
    "private": true,
    "scripts": {
        "start": "umi dev",
        "start:server": "npm run --prefix ./server dev",
        "build": "npm run build:server && npm run build:react",
        "build:react": "umi build",
        "build:server": "npm run --prefix ./server build",
        "lint-staged": "lint-staged",
        "format": "npm run lint && npm run style && npm run prettier",
        "prettier": "prettier \"**/*.{ts,tsx,js,jsx}\" --write",
        "style": "stylelint 'src/**/*.less' --syntax less --fix",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src server --fix",
        "test": "umi test --coverage",
        "test:watch": "umi test --watchAll",
        "readme": "npm run --prefix ./server readme"
    },
    "dependencies": {
        "antd": "^3.20.0",
        "dva": "^2.4.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "umi": "^2.8.13"
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/react-test-renderer": "^16.8.2",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "eslint": "^6.0.1",
        "eslint-config-airbnb": "^17.1.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.3",
        "husky": "^3.0.0",
        "jest": "^24.8.0",
        "lint-staged": "^9.0.2",
        "prettier": "^1.18.2",
        "react-test-renderer": "^16.8.6",
        "stylelint": "^10.1.0",
        "stylelint-config-css-modules": "^1.4.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
        "stylelint-order": "^3.0.0",
        "ts-jest": "^24.0.2",
        "umi-plugin-react": "^1.9.12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-staged",
            "pre-push": "npm run test"
        }
    },
    "lint-staged": {
        "**/*.{ts,tsx,jsx,js}": [
            "eslint --fix",
            "git add"
        ],
        "**/*.less": [
            "stylelint --syntax less --fix",
            "git add"
        ]
    },
    "repository": "https://github.com/nusr/ComicHub",
    "keywords": [
        "umi",
        "Comic",
        "Downloader",
        "typescript"
    ],
    "author": {
        "name": "Steve Xu",
        "email": "stevexugc@gmail.com"
    },
    "license": "MIT"
}
