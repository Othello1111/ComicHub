{
  "name": "ComicHub",
  "version": "1.0.0",
  "description": "ComicHub",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --config build/webpack.dev.config.js",
    "start:server": "npm run --prefix ./server dev",
    "build": "npm run build:server && npm run build:react",
    "build:react": "cross-env NODE_ENV=production webpack --config build/webpack.prod.config.js",
    "build:server": "npm run --prefix ./server scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src server",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "readme": "npm run --prefix ./server readme",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "antd": "^3.20.7",
    "history": "^4.9.0",
    "qs": "^6.7.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-test-renderer": "^16.8.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^1.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*": [
      "npm run readme",
      "git add",
      "git status"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "pre-push": "npm run test"
    }
  },
  "repository": "https://github.com/nusr/ComicHub",
  "keywords": [
    "Comic",
    "Downloader",
    "typescript"
  ],
  "author": {
    "name": "Steve Xu",
    "email": "stevexugc@gmail.com"
  },
  "license": "MIT"
}
