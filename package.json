{
    "name": "ComicHub",
    "version": "1.0.0",
    "description": "ComicHub",
    "private": true,
    "scripts": {
        "start": "umi dev",
        "start:server": "npm run --prefix ./server dev",
        "build:react": "umi build",
        "build:server": "npm run --prefix ./server build",
        "build": "npm run build:react && npm run build:server",
        "watch": "tsc -w",
        "lint-staged": "lint-staged",
        "format": "npm run lint && npm run style && npm run prettier",
        "prettier": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --write",
        "style": "stylelint 'src/**/*.less' --syntax less --fix",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src server --fix",
        "test:react": "umi test",
        "test:server": "npm run --prefix ./server test",
        "test": "concurrently \"npm run test:react\" \"npm run test:server\"",
        "readme": "npm run --prefix ./server readme"
    },
    "dependencies": {
        "antd": "^3.19.2",
        "dva": "^2.4.1",
        "lodash": "^4.17.11",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "umi": "^2.7.2"
    },
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "@types/lodash": "^4.14.133",
        "@types/react-test-renderer": "^16.8.1",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "babel-eslint": "^10.0.1",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.3.0",
        "lint-staged": "^8.2.0",
        "prettier": "^1.17.1",
        "react-test-renderer": "^16.8.6",
        "stylelint": "^10.0.1",
        "stylelint-config-css-modules": "^1.4.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
        "stylelint-order": "^3.0.0",
        "umi-plugin-react": "^1.4.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-staged",
            "pre-push": "npm run test"
        }
    },
    "lint-staged": {
        "linters": {
            "**/*.{ts,tsx,jsx,js}": [
                "eslint --fix",
                "git add"
            ],
            "**/*.less": [
                "stylelint --syntax less --fix",
                "git add"
            ],
            "**/*.{json,md}": [
                "prettier --write",
                "git add"
            ]
        },
        "ignore": [
            "**/dist/**/*",
            "**/build/**/*"
        ]
    },
    "repository": "https://github.com/nusr/ComicHub",
    "keywords": [
        "umi",
        "Comic",
        "Downloader",
        "typescript"
    ],
    "author": {
        "name": "Steve Xu",
        "email": "stevexugc@gmail.com"
    },
    "license": "MIT"
}
